#ifndef API_UART_H
#define API_UART_H

#include "stm32f4xx_hal.h"
#include <stdbool.h>
#include <stdint.h>

/**
 * @brief Inicializa la UART
 * 
 * @return bool_t false si no pudo inicializarla
 *                true si OK
 */
